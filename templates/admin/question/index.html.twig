{% extends 'admin/base.html.twig' %}

{% block title %}Table question{% endblock %}

{% block body %}
<div class="container mt-2">
    <h1>Questions</h1>
    <a class="btn btn-primary mb-3" href="{{ path('admin_question_new') }}">Créer nouvelle question</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Quizz</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>
                <td>{{ question.id }}</td>
                <td>{{ question.label }}</td>
                <td>{{ question.quizz.titre }}</td>
                <td>
                    <a class="btn btn-info mr-2" href="{{ path('admin_question_show', {'id': question.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('admin_question_edit', {'id': question.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}

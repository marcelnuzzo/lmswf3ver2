{% extends 'admin/base.html.twig' %}

{% block title %}Réponse{% endblock %}

{% block body %}
<div class="container">
    <h1>Réponse</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>Proposition</th>
                <td>{{ answer.proposition }}</td>
            </tr>
            <tr>
                <th>Correction</th>
                <td>{{ answer.correction ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_answer_index') }}">back to list</a>

    <a class="btn btn-warning mb-3 ml-2" href="{{ path('admin_answer_edit', {'id': answer.id}) }}">edit</a>

    {{ include('admin/answer/_delete_form.html.twig') }}
</div>
{% endblock %}

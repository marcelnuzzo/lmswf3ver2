{% extends 'admin/base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div class="container">
    <h1>User index</h1>
    <a class="btn btn-primary" href="{{ path('admin_user_new') }}">Create new</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prénom</th>
                <th>Nom</th>
                <th>Rôle</th>
                <th>Email</th>
                <th>Date de naissance</th>
                <th>Téléphone</th>
                <th>Résultat quiz</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>
                    <ul>
                        {% for role in user.roles %}
                            <li>{{role}}</li>
                        {% endfor %}
                    </ul>
                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.birthAt ? user.birthAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.okquiz ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-info" href="{{ path('admin_user_show', {'id': user.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('admin_user_edit', {'id': user.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}

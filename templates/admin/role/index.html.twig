{% extends 'admin/base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
<div class="container mt-2">
    <h1>Role index</h1>
    <a class="btn btn-primary mb-3" href="{{ path('admin_role_new') }}">Créer nouveau rôle</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.id }}</td>
                <td>{{ role.title }}</td>
                <td>
                    <a class="btn btn-info mr-2" href="{{ path('admin_role_show', {'id': role.id}) }}">Voir</a>
                    <a class="btn btn-warning" href="{{ path('admin_role_edit', {'id': role.id}) }}">Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}

                </td>
                <td>{{ user.email }}</td>
                <td>{{ user.birthAt ? user.birthAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.okquiz ? 'Yes' : 'No' }}</>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
